@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.Label("Select category")
    @Html.DropDownList("CategoryId") // DropDownList takes the category information passed down from Viewbag and dispays it for the user

    <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>

<!-- Note that this looks exactly the same as it did before we added Users. Our controller handles the association between an Item and a User and the form has nothing to do with it --> 