@{
  Layout = "_Layout";
}

@using System.Security.Claims <!-- lesson 7. needed to access User.Identity properties -->

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated) // if our Account Controller Login() method succeeds, then greet the user by Name and add a logout button
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}